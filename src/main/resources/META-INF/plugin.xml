<idea-plugin>
    <id>me.zkvl.beadsviewer</id>
    <name>Beads Viewer</name>
    <vendor url="https://zkvl.me">Zakhar Kaval</vendor>

    <description><![CDATA[
        IntelliJ Platform integration for <strong>Beads</strong>, a git-backed issue tracker designed for AI-supervised coding workflows.<br>
        <br>
        Explore, manage, and visualize your project's issues directly within IntelliJ IDEA and other JetBrains IDEs.<br>
        <br>
    ]]></description>

    <depends>com.intellij.modules.compose</depends>

    <resource-bundle>messages.BeadsBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="BeadsExplorer" factoryClass="me.zkvl.beadsviewer.BeadsToolWindowFactory"
                    icon="me.zkvl.beadsviewer.Icons.PluginIcon"
                    canCloseContents="true"/>
        <projectService serviceImplementation="me.zkvl.beadsviewer.state.ViewModeStateService"/>
        <projectService serviceImplementation="me.zkvl.beadsviewer.state.ThemeStateService"/>
        <projectService serviceImplementation="me.zkvl.beadsviewer.service.IssueDetailTabService"/>
        <projectService serviceImplementation="me.zkvl.beadsviewer.service.BeadsCommandService"/>
    </extensions>

    <projectListeners>
        <listener class="me.zkvl.beadsviewer.service.FileWatcherService"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </projectListeners>
</idea-plugin>